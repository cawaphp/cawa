{
    "name": "cawaphp/cawa",
    "description": "Сáша Framework",
    "keywords": [
        "cawa",
        "framework"
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "tchiotludo"
        }
    ],
    "autoload": {
        "psr-4": {
            "Cawa\\": "src"
        }
    },
    "require": {
        "php": "~7.1",

        "ext-mbstring": "*",
        "ext-intl": "*",

        "behat/transliterator": "~1.1",
        "giggsey/libphonenumber-for-php": "~8.1",
        "jeremykendall/php-domain-parser": "~3.0",
        "cakephp/chronos": "^1.0",
        "nesbot/carbon": "^1.22",
        "punic/punic": "~2.1",
        "psr/log": "~1.0",
        "symfony/translation": "~3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "~6.4"
    },
    "scripts": {
        "test": [
            "phpdbg -qrr vendor/bin/phpunit"
        ],
        "test-ci": [
            "phpdbg -qrr vendor/bin/phpunit --verbose --coverage-clover build/logs/clover.xml"
        ],
        "fix" : [
            "php php-cs-fixer.phar fix --dry-run -vvv"
        ],
        "fix-dry" : [
            "php php-cs-fixer.phar fix --dry-run -vvv"
        ],
        "cs" : [
            "phpcs --standard=PSR2 src/"
        ],
        "cbf" : [
            "phpcbf --standard=PSR2 src/"
        ]
    }
}
